<div class="register m-5 mx-auto">

  <h3 class="text-center mt-4 mb-4 login-text">Register your own Account!</h3>
  <div class="row row-login">

    <div class="right col-6 p-3">

      <form action="/users/register" method="POST">
        <div class="form-group">
          <label for="name">Name</label>
          <input type="name" name="name" class="form-control log" id="name" placeholder="Enter name"
            value="{{#if name}}{{name}}{{/if}}">
        </div>

        <div class="form-group">
          <label for="email">Email</label>
          <input type="email" name="email" class="form-control log" id="email" aria-describedby="emailHelp"
            placeholder="Enter name" value="{{#if email}}{{email}}{{/if}}">
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input type="password" name="password" class="form-control log" id="password" placeholder="Enter password">
        </div>

        <div class="form-group">
          <label for="password2">Comfirm Password</label>
          <input type="password" name="password2" class="form-control log" id="password2"
            placeholder="Enter password again">
        </div>

        <button type="submit" class="btn-login border-0 btn btn-block btn-primary mt-4 ">Register</button>

        <p class="mt-3">Already have account ?<a href="/user/login"> Login</a> </p>

      </form>

    </div>
    <div class="register-left left col-6"></div>
  </div>
</div>