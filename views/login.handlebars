<div class="login mx-auto m-5 container">
  {{>message}}
  <h3 class="login-text text-center m-3 mb-4">Login and Have fun!</h3>
  <div class="row row-login">
    <div class="left col-6"></div>

    <div class="right col-6 p-3">

      <form action="/user/login" method="POST">
        <div class="form-group input-login">
          <label for="email">註冊信箱</label>
          <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp"
            placeholder="Enter email">

        </div>
        <div class="form-group input-login">
          <label for="password">密碼</label>
          <input type="password" class="form-control" id="password" name="password" placeholder="Password">
        </div>

        <button type="submit" class="btn-login border-0 btn btn-block btn-primary mt-4">Login</button>

        <!--第三方登入-->
        <div class="one-login form-group fb mt-4">
          <p class="one-text text-center">試試一鍵登入
            <a class="text-center" href="/auth/facebook"> <i class="login-fb fab fa-facebook"></i></a>
            <a class="text-center" href="#"> <i class="login-google fab fa-google"></i></a>
          </p>
        </div>


        <p class="mt-3 text-center">還沒有帳戶？<a href="/user/register" class="to-register"> 按此註冊</a> </p>


      </form>
    </div>
  </div>
</div>